<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_approve_one_req"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"
    android:background="@color/white"
    android:weightSum="1">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:drawableLeft="@mipmap/meu"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:onClick="LevelClick"
        android:gravity="left"
            android:textSize="35dp"
            android:id="@+id/textView2"
            android:layout_alignBottom="@+id/levelListId"
            android:layout_alignParentStart="true">
    </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9999"
            android:padding="5dp"
            android:id="@+id/coinIdplay"
            android:drawableLeft="@mipmap/clip"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:gravity="right"
            android:textColor="@color/colorPrimaryDark"
            android:onClick="coinClick"
            android:textSize="30dp"
            android:layout_alignBaseline="@+id/levelListId"
            android:layout_alignBottom="@+id/levelListId"
            android:layout_alignParentEnd="true">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Practice:1"
            android:id="@+id/levelListId"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="left"
            android:textSize="30dp"
            android:layout_marginEnd="52dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/coinIdplay">
        </TextView>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70px"
        />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <GridLayout
            android:id="@+id/GridLayout1"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:columnCount="2"
            android:rowCount="2"
            android:orientation="horizontal"
            tools:context=".GridXMLActivity" >

            <Button
                android:id="@+id/learnbutton1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:onClick="learnA"
                android:background="@drawable/inblack" />

            <Button
                android:id="@+id/learnbutton2"
                android:layout_width="150dp"
                android:background="@drawable/inblack"
                android:onClick="learnB"
                android:layout_height="150dp" />

            <Button
                android:id="@+id/learnbutton3"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:onClick="learnC"
                android:background="@drawable/inblack"
                />

            <Button
                android:id="@+id/learnbutton4"
                android:layout_width="150dp"
                android:background="@drawable/inblack"
                android:onClick="learnD"
                android:layout_height="150dp" />
        </GridLayout>
</android.support.v7.widget.LinearLayoutCompat>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30px"
        />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:gravity="center"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/linearLayoutCompat">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:drawableTop="@mipmap/back"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:onClick="coinClick"
            android:textSize="20dp"
            android:id="@+id/textView6"
            >
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:drawableTop="@mipmap/reset"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:onClick="coinClick"
            android:textSize="20dp"
            android:id="@+id/textView5">
        </TextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Help"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:drawableTop="@mipmap/help"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:onClick="coinClick"
            android:textSize="20dp"
            android:id="@+id/textView4"
            >
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hint"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:drawableTop="@mipmap/hint"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:onClick="coinClick"
            android:textSize="20dp"
            android:id="@+id/textView3">
        </TextView>
    </android.support.v7.widget.LinearLayoutCompat>

</LinearLayout>
