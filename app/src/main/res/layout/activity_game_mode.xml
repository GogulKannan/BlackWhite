<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_unfulfilled_requisitions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/white"
    android:paddingTop="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textColor="@color/darkblack"
            android:textSize="20dp">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="9999"
            android:padding="5dp"
            android:id="@+id/coinId"
            android:textAlignment="center"
            android:drawableLeft="@mipmap/clip"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:onClick="coinClick"
            android:textSize="35dp">

        </TextView>
    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="10dp"
            android:layout_height="60dp"
            />
        <Button
            android:text="LEARN TO PLAY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/emptybutton"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="50px"
            android:id="@+id/learnid"
            android:textAlignment="center"
            android:textStyle="bold"
            android:onClick="learnClick"
            />
        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/easyid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mybutton"
            android:onClick="easyclick"
            android:text="Easy"
            android:textColor="@color/white"
            android:textSize="50px"
            />
        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/mediumid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mybutton"
            android:onClick="mediumonclick"
            android:text="Medium"
            android:textColor="@color/white"
            android:textSize="50px"
            />
        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/hardid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mybutton"
            android:onClick="hardonclick"
            android:text="Hard"
            android:textColor="@color/white"
            android:textSize="50px"
            />
        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/evilid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mybutton"
            android:onClick="evilonclick"
            android:text="Evil"
            android:textColor="@color/white"
            android:textSize="50px"
            />
        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            />

        </android.support.v7.widget.LinearLayoutCompat>









</LinearLayout>

